# ===========================================
# Database
# ===========================================
DB_HOST=
DB_PORT=5432
DB_NAME=
DB_USER=
DB_PASSWORD=

# ===========================================
# Auth
# ===========================================
SESSION_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===========================================
# URLs & Cookies
# ===========================================
# Local development (Vite proxy on 5173, backend on 8000):
#   BASE_URL=http://localhost:5173
#   FRONTEND_URL=http://localhost:5173
#   COOKIE_SECURE=false
#   COOKIE_SAMESITE=none
#   -> Google Console: http://localhost:5173/auth/google/callback
#
# Local development (built frontend, same origin):
#   BASE_URL=http://localhost:8000
#   FRONTEND_URL=http://localhost:8000
#   COOKIE_SECURE=false
#   COOKIE_SAMESITE=lax
#   -> Google Console: http://localhost:8000/auth/google/callback
#
# Production (separate domains):
#   BASE_URL=https://api.yourdomain.com
#   FRONTEND_URL=https://yourdomain.com
#   COOKIE_SECURE=true
#   COOKIE_SAMESITE=none
#   -> Google Console: https://api.yourdomain.com/auth/google/callback

BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8000
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# ===========================================
# S3
# ===========================================
S3_BUCKET=
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ===========================================
# Workers
# ===========================================
WORKER_ENABLED=true
WORKER_CONCURRENCY=1
MUSIC_WORKER_CONCURRENCY=1

# ===========================================
# Analysis Pipelines
# ===========================================
MOTION_ROOT=motion
MAGIC_WORKER_CMD=python motion/gpu/sam3/detect_object_events.py --video {video} --out_json {out_json} --out_video {out_video} --model motion/weights/sam3.pt --prompt "object" --target_fps 5 --conf 0.5 --min_hits 2 --vanish_gap_s 1.2 --max_fraction 1.0 --device cuda:0
MUSIC_ANALYZER_ROOT=music-analyzer
DEMUCS_MODEL=htdemucs

# ===========================================
# Misc
# ===========================================
MONITORING_PUBLIC=false
